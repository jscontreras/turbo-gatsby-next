{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "public/**",
        ".next/**",
        "!.next/cache/**",
        ".vercel/output/**"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        "**/vercel.json"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
